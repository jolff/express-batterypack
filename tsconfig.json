{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",

    "module": "CommonJS",
    "lib": ["es2021"],
    "target": "es2021",

    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
